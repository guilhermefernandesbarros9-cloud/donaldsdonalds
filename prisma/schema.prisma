// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Package {
  id           String   @id @default(uuid()) // O Prisma gera o ID automaticamente aqui
  trackingCode String   @unique
  description  String?
  sender       String?  @default("Correios Brasil")
  recipient    String?
  shippingTax  Float?   @default(15.00)
  status       String?  @default("POSTED")
  createdAt    DateTime @default(now())
  userId       String?
}

model User {
  id    String    @id @default(uuid()) // O Prisma gera o ID automaticamente aqui
  name  String?
  email String?   @unique
}